{
	"name": "minecraft-web-api-svelte",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"deploy": "vite build && cd build && npm run append:pulsecode && tar cfvz ../build.tgz ./ && cd ../ && scp build.tgz wounded_duck@mc.mooseengine.com:~/minecraft-web-api && rm -rf build && rm build.tgz",
		"append:pulsecode": "echo \"fetch('http://0.0.0.0:52341/api/begin-pulse').then(x => x.text()).then(console.log);\" >> build/index.js"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/adapter-node": "^5.3.1",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@types/node": "^24.2.1",
		"fs": "^0.0.1-security",
		"rcon-client": "^4.2.5",
		"sass": "^1.90.0",
		"sass-embedded": "^1.90.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^7.0.4"
	},
	"dependencies": {
		"cron-parser": "^5.3.0",
		"mysql2": "^3.14.3"
	}
}
